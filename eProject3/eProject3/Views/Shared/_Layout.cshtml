                            </div>

                            <div class="form-group">
                                <label class="col-sm-10" for="email"><b>User Email:</b></label>
                                @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @id = "UserEmail", @class = "form-control", @placeholder = "User Email", @type = "email" } })
                                @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-block btn-danger" id="saveUserRecord">Submit</button>
                            </div>
                        </fieldset>
                    </form>
