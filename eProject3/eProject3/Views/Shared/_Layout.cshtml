                                @Html.EditorFor(model => model.UserDOB, new { htmlAttributes = new { @id = "UserDOB", @class = "form-control", @placeholder = "User Date of Birth", @type = "text", @onfocus = "(this.type='date')", @onblur = "(this.type='text')" } })
