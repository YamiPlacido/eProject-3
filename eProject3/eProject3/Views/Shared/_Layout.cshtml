<script>
    function CreateUser(UserID) {
        $("#form")[0].reset();
        $("#UserID").val(0);
        $("#MyModal").modal();
    }

    $("#saveUserRecord").click(function () {
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/Users/SaveData",
            data: data,
            success: function (result) {
                alert("Success!..");
                window.location.href = "/Home/Index";
                $("#MyModal").modal("hide");
            }
        })
    })
</script>