    @* Create User Modal *@

    <div id="MyModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" align="center">
                    <h4 class="col-sm-12 modal-title text-center" align="center">
                        <h id="ModalTitle">Sign Up</h>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </h4>
                </div>

                <div class="modal-body">
                    <form class="form-horizontal" id="form">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(model => model.UserID, new { @id = "UserID" })
                            <div class="form-group">
                                <label class="col-sm-10" for="email"><b>User Name:</b></label>
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @id = "UserName", @class = "form-control", @placeholder = "User Name" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="col-sm-10" for="email"><b>User Password:</b></label>
                                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @id = "UserPassword", @class = "form-control", @type = "password" } })
                                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="col-sm-10" for="email"><b>User First Name:</b></label>
